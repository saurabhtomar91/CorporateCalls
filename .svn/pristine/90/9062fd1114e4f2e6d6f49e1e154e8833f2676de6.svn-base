<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/default_skin"
    android:orientation="vertical"
    android:paddingLeft="10.659973dip"
    android:paddingRight="10.659973dip"
    android:paddingTop="12.0dip" >


    <EditText
        android:id="@+id/registration_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.659973dip"
        android:background="@drawable/v2_img_inputbar"
        android:gravity="center_vertical"
        android:hint="@string/name"
        android:inputType="text"
        android:paddingLeft="10.559998dip"
        android:paddingRight="9.23999dip"
        android:shadowColor="#ffffffff"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:textColor="#ff111111"
        android:textColorHint="#ff97999d"
        android:textSize="14.0sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/registration_phonenumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.659973dip"
        android:background="@drawable/v2_img_inputbar"
        android:gravity="center_vertical"
        android:hint="@string/phone"
        android:inputType="numberSigned"
        android:paddingLeft="10.559998dip"
        android:paddingRight="9.23999dip"
        android:shadowColor="#ffffffff"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:textColor="#ff111111"
        android:textColorHint="#ff97999d"
        android:textSize="14.0sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/registration_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.659973dip"
        android:background="@drawable/v2_img_inputbar"
        android:gravity="center_vertical"
        android:hint="@string/address"
        android:inputType="textEmailAddress"
        android:paddingLeft="10.559998dip"
        android:paddingRight="9.23999dip"
        android:shadowColor="#ffffffff"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:textColor="#ff111111"
        android:textColorHint="#ff97999d"
        android:textSize="14.0sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registration_btn"
        style="@style/v2_common_button_big_green"
        android:layout_marginTop="28.0dip"
        android:onClick="onClick"
        android:text="@string/register" />

</LinearLayout>