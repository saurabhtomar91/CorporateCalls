<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="v2_common_button_big">
        <item name="android:textSize">19.329987sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/v2_selector_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48.669983dip</item>
    </style>
    <style name="v2_common_button_big_green" parent="@style/v2_common_button_big">
        <item name="android:background">@drawable/v2_selector_button_big_green</item>
        <item name="android:shadowColor">#ff2e621b</item>
        <item name="android:shadowDy">0.67</item>
        <item name="android:shadowRadius">0.67</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Large.Inverse">
        <item name="android:layout_width">200dip</item>
        <item name="android:layout_height">100dip</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>
